{
  "name": "@hexaresume/api",
  "version": "1.0.0",
  "description": "Main backend API for HexaResume",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "tsx src/shared/database/migrate.ts",
    "db:seed": "tsx src/shared/database/seed.ts",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "@hexaresume/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@types/cookie-parser": "^1.4.6",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "eslint": "^9",
    "vitest": "^1.1.0"
  }
